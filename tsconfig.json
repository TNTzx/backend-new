{
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "commonjs",
        "target": "esnext",
        "strict": true,
        "allowJs": true,
        "declaration": false,
        "esModuleInterop": true,
        "removeComments": true,
        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true,
        "plugins": [{ "transform": "typescript-rtti/dist/transformer" }]
    },
    "include": [
        "prisma/**/*.ts",
        "src/**/*.ts",
        "routes/**/*.ts",
        "app.ts"
    ]
}